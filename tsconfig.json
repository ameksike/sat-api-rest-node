{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist", // Ensure output is directed to the dist folder
    "rootDir": "./src", // The root folder of your TypeScript files
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    // "test/**/*"
  ]
}